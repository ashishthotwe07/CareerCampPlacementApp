<!-- Edit Interview Form -->
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-warning text-white">
                    <h4 class="mb-0">Edit Interview</h4>
                </div>
                <div class="card-body">
                    <form action="/interview/edit/" method="POST">
                        <!-- Company Input -->

                        <input type="hidden" name="interviewId" value="<%= interview._id %>">

                        <div class="mb-3">
                            <label for="company" class="form-label">Company:</label>
                            <input type="text" class="form-control" id="company" name="company" placeholder="Example Company" value="<%= interview.company %>" required>
                        </div>

                        <!-- Date Input -->
                        <div class="mb-3">
                            <label for="date" class="form-label">Date:</label>
                            <input type="date" class="form-control" id="date" name="date" value="<%= interview.date %>" required>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-warning">Save Changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
