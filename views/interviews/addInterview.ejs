<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Add Interview</h4>
                </div>
                <div class="card-body">
                    <form action="/interview/add" method="POST">
                        <!-- Company Input -->
                        <div class="mb-3">
                            <label for="company" class="form-label">Company:</label>
                            <input type="text" class="form-control" id="company" name="company" placeholder="Example Company" required>
                        </div>

                        <!-- Date Input -->
                        <div class="mb-3">
                            <label for="date" class="form-label">Date:</label>
                            <input type="date" class="form-control" id="date" name="date" required>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-success">Add Interview</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
