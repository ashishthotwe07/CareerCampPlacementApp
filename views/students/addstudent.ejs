<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Add Student</h4>
                </div>
                <div class="card-body">
                    <form action="/students/add" method="POST">
                        <!-- Name Input -->
                        <div class="mb-3">
                            <label for="name" class="form-label">Name:</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="John Doe" required>
                        </div>

                        <!-- Batch Input -->
                        <div class="mb-3">
                            <label for="batch" class="form-label">Batch:</label>
                            <input type="text" class="form-control" id="batch" name="batch" placeholder="2023" required>
                        </div>

                        <!-- College Input -->
                        <div class="mb-3">
                            <label for="college" class="form-label">College:</label>
                            <input type="text" class="form-control" id="college" name="college" placeholder="Example College" required>
                        </div>

                        <!-- DSA Score Input -->
                        <div class="mb-3">
                            <label for="dsaScore" class="form-label">DSA Score:</label>
                            <input type="number" class="form-control" id="dsaScore" name="dsaScore" placeholder="90" required>
                        </div>

                        <!-- WebD Score Input -->
                        <div class="mb-3">
                            <label for="webDScore" class="form-label">WebD Score:</label>
                            <input type="number" class="form-control" id="webDScore" name="webDScore" placeholder="80" required>
                        </div>

                        <!-- React Score Input -->
                        <div class="mb-3">
                            <label for="reactScore" class="form-label">React Score:</label>
                            <input type="number" class="form-control" id="reactScore" name="reactScore" placeholder="75" required>
                        </div>

                        <!-- Status Input -->
                        <div class="mb-3">
                            <label for="status" class="form-label">Status:</label>
                            <select class="form-select" id="status" name="status" required>
                                <option value="Placed">Placed</option>
                                <option value="Not Placed">Not Placed</option>
                            </select>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-success">Add Student</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
