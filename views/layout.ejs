            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">

                    <% if (locals.user){%>
                        <li class="nav-item">
                            <a class="nav-link" href="/dashboard">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/interview">Interview</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/download">Download Data</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/users/signout">Sign out</a>
                        </li>
                    <%} else {%>
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                        <%}%>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <%- body %>
    </div>

